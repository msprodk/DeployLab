{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "adminUsername": {
            "type": "string",
            "defaultValue": "Install",
            "metadata": {
                "description": "The name of the Administrator of the new VM and Domain"
            }
        },
        "adminPassword": {
            "type": "securestring",
            "defaultValue": "Somepass1234",
            "metadata": {
                "description": "The password for the Administrator account of the new VM and Domain"
            }
        },
        "domainName": {
            "type": "string",
            "defaultValue": "ps.dom",
            "metadata": {
                "description": "The FQDN of the AD Domain created "
            }
        },
        "dnsPrefix": {
            "type": "string",
            "defaultValue": "msprotest1pub",
            "metadata": {
                "description": "The DNS prefix for the public IP address used by the Load Balancer"
            }
        },
        "RDPPortDC": {
            "type": "int",
            "metadata": {
                "description": "The public RDP port for the PDC VM"
            },
            "defaultValue": 3389
        },
        "RDPPortSrv": {
            "type": "int",
            "metadata": {
                "description": "The public RDP port for the BDC VM"
            },
            "defaultValue": 3390
        },
        "RDPPortClient": {
            "type": "int",
            "metadata": {
                "description": "The public RDP port for the BDC VM"
            },
            "defaultValue": 3391
        },
        "_artifactsLocation": {
            "type": "string",
            "metadata": {
                "description": "The location of resources, such as templates and DSC modules, that the template depends on"
            },
            "defaultValue": "[deployment().properties.templateLink.uri]"
        },
        "_artifactsLocationSasToken": {
            "type": "securestring",
            "metadata": {
                "description": "Auto-generated token to access _artifactsLocation"
            },
            "defaultValue": ""
        },
        "ResourceGroup": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "ResourceGroup for all resources."
            }
        },
        "adVMSize": {
            "type": "string",
            "defaultValue": "Standard_DS2_v2",
            "metadata": {
                "description": "Size for the VM.  This sample uses premium disk and requires an 'S' sku."
            }
        }
    },
    "variables": {
        "saType":                          "Premium_LRS",
  
        //Server OS  
        "osImagePublisherServer":          "MicrosoftWindowsServer",
        "osImageOfferServer":              "WindowsServer",
        "osImageSKUServer":                "2019-Datacenter",
  
        //Client OS  
        "osImagePublisherClient":          "MicrosoftWindowsDesktop",
        "osimageOfferClient":              "Windows-10",
        "osimageSKUClient":                "20h2-ent",
          
        //Networks  
        "netVnetName":                     "net-vn-VNET1",
        "netVnetCIDR":                     "10.200.0.0/24",
        "netSubnetName":                   "net-Subnet1",
        "netSubnetCIDR":                   "10.200.0.0/24",
        "netAvailabilitySetName":          "net-as-availabiltyset1",
        "netSubnetRef":                    "[resourceId('Microsoft.Network/virtualNetworks/subnets', variables('netVnetName'), variables('netSubnetName'))]",
        "netTemplateUriVnet":              "[uri(parameters('_artifactsLocation'), concat('nestedtemplates/vnet.json', parameters('_artifactsLocationSasToken')))]",
        "netTemplateUriNIC":               "[uri(parameters('_artifactsLocation'), concat('nestedtemplates/nic.json', parameters('_artifactsLocationSasToken')))]",
        "netTemplateUriVnetWithDNS":       "[uri(parameters('_artifactsLocation'), concat('nestedtemplates/vnet-with-dns-server.json', parameters('_artifactsLocationSasToken')))]",

        //Load Balancer
        "lbName":                          "net-lb-lb1",
        "lbFrontEndname":                  "net-lb-frontend",
        "lbBackEndname":                   "net-lb-backend",
        "lbPublicIPAddressName":           "net-lb-pip",
        "lbFEConfigID":                    "[resourceId('Microsoft.Network/loadBalancers/frontendIPConfigurations', variables('lbName'), variables('lbFrontEndname'))]",
        "lbBackEndAddressPoolID":          "[resourceId('Microsoft.Network/loadBalancers/backendAddressPools', variables('lbName'), variables('lbBackEndname'))]",

        //Domain Controller
        "vmDCName":                        "PSDC",
        "vmDCImagePublisher":              "MicrosoftWindowsServer",
        "vmDCImageOffer":                  "WindowsServer",
        "vmDCImageSKU":                    "2019-Datacenter",
        "vmDCNatRdp":                      "DC-rdp",
        "vmDCNicName":                     "DC-nic",
        "vmDCNicIPAddress":                "10.200.0.4",
        "vmDCRdpNATRuleID":                "[resourceId('Microsoft.Network/loadBalancers/inboundNatRules', variables('lbName'), variables('vmDCNatRdp'))]",
        "vmDCModulesURL":                  "[uri(parameters('_artifactsLocation'), concat('DSC/ConfigDC.zip', parameters('_artifactsLocationSasToken')))]",
        "vmDCFunctionConfiguration":       "ConfigDC.ps1\\ConfigurationDC",

        //Server
        "vmSRVName":                       "PSSRV",
        "vmSRVImagePublisher":             "MicrosoftWindowsServer",
        "vmSRVImageOffer":                 "WindowsServer",
        "vmSRVImageSKU":                   "2019-Datacenter",
        "vmSRVNatRdp":                     "SRV-rdp",
        "vmSRVNicName":                    "SRV-nic",
        "vmSRVNicIPAddress":               "10.200.0.5",
        "vmSRVRdpNATRuleID":               "[resourceId('Microsoft.Network/loadBalancers/inboundNatRules', variables('lbName'), variables('vmSRVNatRdp'))]",
        "vmSRVModulesURLPreparation":      "[uri(parameters('_artifactsLocation'), concat('DSC/PrepareSRV.zip', parameters('_artifactsLocationSasToken')))]",
        "vmSRVTemplateUriConfigure":       "[uri(parameters('_artifactsLocation'), concat('nestedtemplates/configSRV.json', parameters('_artifactsLocationSasToken')))]",
        "vmSRVModulesURLConfiguration":    "[uri(parameters('_artifactsLocation'), concat('DSC/ConfigSRV.zip', parameters('_artifactsLocationSasToken')))]",
        "vmSRVFunctionPreparation":        "PrepareSRV.ps1\\PreparationSRV",
        "vmSRVFunctionConfiguration":      "ConfigSRV.ps1\\ConfigurationSRV",

        //Client
        "vmCLIENTName":                    "PSADM",
        "vmCLIENTImagePublisher":          "MicrosoftWindowsServer",
        "vmCLIENTImageOffer":              "WindowsServer",
        "vmCLIENTImageSKU":                "2019-Datacenter",
        "vmCLIENTNatRdp":                  "CLIENT-rdp",
        "vmCLIENTNicName":                 "CLIENT-nic",
        "vmCLIENTNicIPAddress":            "10.200.0.6",
        "vmCLIENTdpNATRuleID":             "[resourceId('Microsoft.Network/loadBalancers/inboundNatRules', variables('lbName'), variables('vmCLIENTNatRdp'))]",
        "vmCLIENTModulesURLPreparation":   "[uri(parameters('_artifactsLocation'), concat('DSC/PrepareCLIENT.zip', parameters('_artifactsLocationSasToken')))]",
        "vmCLIENTModulesURLConfiguration": "[uri(parameters('_artifactsLocation'), concat('DSC/ConfigCLIENT.zip', parameters('_artifactsLocationSasToken')))]",
        "vmCLIENTTemplateUriConfigure":    "[uri(parameters('_artifactsLocation'), concat('nestedtemplates/configCLIENT.json', parameters('_artifactsLocationSasToken')))]",
        "vmCLIENTFunctionPreparation":     "PrepareCLIENT.ps1\\PreparationCLIENT",
        "vmCLIENTFunctionConfiguration":   "ConfigCLIENT.ps1\\ConfigurationCLIENT"


    }, 
    "resources": [ 

        //---------------------------------------
        //Azure Networks
        //---------------------------------------
        
        //Microsoft.Network/publicIPAddresses/lbPublicIPAddressName
        {
            "name": "[variables('lbPublicIPAddressName')]",
            "type": "Microsoft.Network/publicIPAddresses",
            "apiVersion": "2020-03-01",
            "location": "[parameters('ResourceGroup')]",
            "properties": {
                "publicIPAllocationMethod": "Dynamic",
                "dnsSettings": {
                    "domainNameLabel": "[parameters('dnsPrefix')]"
                }
            }
        },
        //Microsoft.Compute/availabilitySets/netAvailabilitySetName
        {
            "apiVersion": "2019-12-01",
            "type": "Microsoft.Compute/availabilitySets",
            "location": "[parameters('ResourceGroup')]",
            "name": "[variables('netAvailabilitySetName')]",
            "properties": {
                "PlatformUpdateDomainCount": 20,
                "PlatformFaultDomainCount": 2
            },
            "sku": {
                "name": "Aligned"
            }
        },
        //Microsoft.Resources/deployments/VNet
        {
            "name": "VNet",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-09-01",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('netTemplateUriVnet')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "location": {
                        "value": "[parameters('ResourceGroup')]"
                    },
                    "virtualNetworkName": {
                        "value": "[variables('netVnetName')]"
                    },
                    "virtualNetworkAddressRange": {
                        "value": "[variables('netVnetCIDR')]"
                    },
                    "subnetName": {
                        "value": "[variables('netSubnetName')]"
                    },
                    "subnetRange": {
                        "value": "[variables('netSubnetCIDR')]"
                    }
                }
            }
        },
        //"Microsoft.Network/loadBalancers/lbName"
        {
            "name": "[variables('lbName')]",
            "type": "Microsoft.Network/loadBalancers",
            "apiVersion": "2020-03-01",
            "location": "[parameters('ResourceGroup')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/publicIPAddresses', variables('lbPublicIPAddressName'))]"
            ],
            "properties": {
                "frontendIPConfigurations": [
                    {
                        "name": "[variables('lbFrontEndname')]",
                        "properties": {
                            "publicIPAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIPAddresses', variables('lbPublicIPAddressName'))]"
                            }
                        }
                    }
                ],
                "backendAddressPools": [
                    {
                        "name": "[variables('lbBackEndname')]"
                    }
                ],
                "inboundNatRules": [
                    {
                        "name": "[variables('vmDCNatRdp')]",
                        "properties": {
                            "frontendIPConfiguration": {
                                "id": "[variables('lbFEConfigID')]"
                            },
                            "protocol": "Tcp",
                            "frontendPort": "[parameters('RDPPortDC')]",
                            "backendPort": 3389,
                            "enableFloatingIP": false
                        }
                    },
                    {
                        "name": "[variables('vmSRVNatRdp')]",
                        "properties": {
                            "frontendIPConfiguration": {
                                "id": "[variables('lbFEConfigID')]"
                            },
                            "protocol": "Tcp",
                            "frontendPort": "[parameters('RDPPortSrv')]",
                            "backendPort": 3389,
                            "enableFloatingIP": false
                        }
                    },
                    {
                        "name": "[variables('vmCLIENTNatRdp')]",
                        "properties": {
                            "frontendIPConfiguration": {
                                "id": "[variables('lbFEConfigID')]"
                            },
                            "protocol": "Tcp",
                            "frontendPort": "[parameters('RDPPortClient')]",
                            "backendPort": 3389,
                            "enableFloatingIP": false
                        }
                    }
                ]
            }
        },
        //"Microsoft.Network/networkInterfaces/vmDCNicName"
        {
            "name": "[variables('vmDCNicName')]",
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2020-03-01",
            "location": "[parameters('ResourceGroup')]",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/deployments', 'VNet')]",
                "[resourceId('Microsoft.Network/loadbalancers', variables('lbName'))]"
            ],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "privateIPAllocationMethod": "Static",
                            "privateIPAddress": "[variables('vmDCNicIPAddress')]",
                            "subnet": {
                                "id": "[variables('netSubnetRef')]"
                            },
                            "loadBalancerBackendAddressPools": [
                                {
                                    "id": "[variables('lbBackEndAddressPoolID')]"
                                }
                            ],
                            "loadBalancerInboundNatRules": [
                                {
                                    "id": "[variables('vmDCRdpNATRuleID')]"
                                }
                            ]
                        }
                    }
                ]
            }
        },
        //Microsoft.Network/networkInterfaces/vmSRVNicName
        {
            "name": "[variables('vmSRVNicName')]",
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2020-03-01",
            "location": "[parameters('ResourceGroup')]",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/deployments', 'VNet')]",
                "[resourceId('Microsoft.Network/loadBalancers', variables('lbName'))]"
            ],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "privateIPAllocationMethod": "Static",
                            "privateIPAddress": "[variables('vmSRVNicIPAddress')]",
                            "subnet": {
                                "id": "[variables('netSubnetRef')]"
                            },
                            "loadBalancerBackendAddressPools": [
                                {
                                    "id": "[variables('lbBackEndAddressPoolID')]"
                                }
                            ],
                            "loadBalancerInboundNatRules": [
                                {
                                    "id": "[variables('vmSRVRdpNATRuleID')]"
                                }
                            ]
                        }
                    }
                ]
            }
        },
        //Microsoft.Network/networkInterfaces/vmCLIENTNicName
        {
            "name": "[variables('vmCLIENTNicName')]",
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2020-03-01",
            "location": "[parameters('ResourceGroup')]",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/deployments', 'VNet')]",
                "[resourceId('Microsoft.Network/loadBalancers', variables('lbName'))]"
            ],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "privateIPAllocationMethod": "Static",
                            "privateIPAddress": "[variables('vmCLIENTNicIPAddress')]",
                            "subnet": {
                                "id": "[variables('netSubnetRef')]"
                            },
                            "loadBalancerBackendAddressPools": [
                                {
                                    "id": "[variables('lbBackEndAddressPoolID')]"
                                }
                            ],
                            "loadBalancerInboundNatRules": [
                                {
                                    "id": "[variables('vmCLIENTdpNATRuleID')]"
                                }
                            ]
                        }
                    }
                ]
            }
        },
        
        //---------------------------------------
        //VMs
        //---------------------------------------
        
        //DC
        
        //Microsoft.Compute/virtualMachines/vmDCName
        {
            "name": "[variables('vmDCName')]",
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2019-12-01",
            "location": "[parameters('ResourceGroup')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkInterfaces', variables('vmDCNicName'))]",
                "[resourceId('Microsoft.Compute/availabilitySets', variables('netAvailabilitySetName'))]",
                "[resourceId('Microsoft.Network/loadBalancers', variables('lbName'))]"
            ],
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[parameters('adVMSize')]"
                },
                "availabilitySet": {
                    "id": "[resourceId('Microsoft.Compute/availabilitySets', variables('netAvailabilitySetName'))]"
                },
                "osProfile": {
                    "computerName":     "[variables('vmDCName')]",
                    "adminUsername":    "[parameters('adminUsername')]",
                    "adminPassword":    "[parameters('adminPassword')]"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher":    "[variables('vmDCImagePublisher')]",
                        "offer":        "[variables('vmDCImageOffer')]",
                        "sku":          "[variables('vmDCImageSKU')]",
                        "version":      "latest"
                    },
                    "osDisk": {
                        "name":         "[concat(variables('vmDCName'),'_OSDisk')]",
                        "caching":      "ReadWrite",
                        "createOption": "FromImage",
                        "managedDisk": {
                            "storageAccountType": "[variables('saType')]"
                        }
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('vmDCNicName'))]"
                        }
                    ]
                }
            },
            "resources": [
                {
                    "name": "CreateADForest",
                    "type": "extensions",
                    "apiVersion": "2019-12-01",
                    "location": "[parameters('ResourceGroup')]",
                    "dependsOn": [
                        "[resourceId('Microsoft.Compute/virtualMachines', variables('vmDCName'))]"
                    ],
                    "properties": {
                        "publisher": "Microsoft.Powershell",
                        "type": "DSC",
                        "typeHandlerVersion": "2.19",
                        "autoUpgradeMinorVersion": true,
                        "settings": {
                            "ModulesUrl": "[variables('vmDCModulesURL')]",
                            "ConfigurationFunction": "[variables('vmDCFunctionConfiguration')]",
                            "Properties": {
                                "DomainName": "[parameters('domainName')]",
                                "AdminCreds": {
                                    "UserName": "[parameters('adminUsername')]",
                                    "Password": "PrivateSettingsRef:AdminPassword"
                                }
                            }
                        },
                        "protectedSettings": {
                            "Items": {
                                "AdminPassword": "[parameters('adminPassword')]"
                            }
                        }
                    }
                }             
            ]
        },
        //Microsoft.Resources/deployments/UpdateVNetDNS1
        {
            "name": "UpdateVNetDNS",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-09-01",
            "dependsOn": [
                //"[resourceId('Microsoft.Compute/virtualMachines', variables('vmDCName'))]"
                "CreateADForest"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('netTemplateUriVnetWithDNS')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "location": {
                        "value": "[parameters('ResourceGroup')]"
                    },
                    "virtualNetworkName": {
                        "value": "[variables('netVnetName')]"
                    },
                    "virtualNetworkAddressRange": {
                        "value": "[variables('netVnetCIDR')]"
                    },
                    "subnetName": {
                        "value": "[variables('netSubnetName')]"
                    },
                    "subnetRange": {
                        "value": "[variables('netSubnetCIDR')]"
                    },
                    "DNSServerAddress": {
                        "value": [
                            "[variables('vmDCNicIPAddress')]"
                        ]
                    }
                }
            }
        },
        //Microsoft.Resources/deployments/UpdateNICSRV
        {
            "name": "UpdateNICSRV",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-09-01",
            "dependsOn": [
                "[variables('vmSRVNicName')]",
                "UpdateVNetDNS"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('netTemplateUriNIC')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "location": {
                        "value": "[parameters('ResourceGroup')]"
                    },
                    "nicName": {
                        "value": "[variables('vmSRVNicName')]"
                    },
                    "ipConfigurations": {
                        "value": [
                            {
                                "name": "ipconfig1",
                                "properties": {
                                    "privateIPAllocationMethod": "Static",
                                    "privateIPAddress": "[variables('vmSRVNicIPAddress')]",
                                    "subnet": {
                                        "id": "[variables('netSubnetRef')]"
                                    },
                                    "loadBalancerBackendAddressPools": [
                                        {
                                            "id": "[variables('lbBackEndAddressPoolID')]"
                                        }
                                    ],
                                    "loadBalancerInboundNatRules": [
                                        {
                                            "id": "[variables('vmSRVRdpNATRuleID')]"
                                        }
                                    ]
                                }
                            }
                        ]
                    },
                    "dnsServers": {
                        "value": [
                            "[variables('vmDCNicIPAddress')]"
                        ]
                    }
                }
            }
        },
        //Microsoft.Resources/deployments/UpdateNICCLIENT
        {
            "name": "UpdateNICCLIENT",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-09-01",
            "dependsOn": [
                "[variables('vmCLIENTNicName')]",
                "UpdateVNetDNS"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('netTemplateUriNIC')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "location": {
                        "value": "[parameters('ResourceGroup')]"
                    },
                    "nicName": {
                        "value": "[variables('vmCLIENTNicName')]"
                    },
                    "ipConfigurations": {
                        "value": [
                            {
                                "name": "ipconfig1",
                                "properties": {
                                    "privateIPAllocationMethod": "Static",
                                    "privateIPAddress": "[variables('vmCLIENTNicIPAddress')]",
                                    "subnet": {
                                        "id": "[variables('netSubnetRef')]"
                                    },
                                    "loadBalancerBackendAddressPools": [
                                        {
                                            "id": "[variables('lbBackEndAddressPoolID')]"
                                        }
                                    ],
                                    "loadBalancerInboundNatRules": [
                                        {
                                            "id": "[variables('vmCLIENTdpNATRuleID')]"
                                        }
                                    ]
                                }
                            }
                        ]
                    },
                    "dnsServers": {
                        "value": [
                            "[variables('vmDCNicIPAddress')]"
                        ]
                    }
                }
            }
        },
        
        //SRV

        //Microsoft.Compute/virtualMachines/vmSRVName
        {
            "name": "[variables('vmSRVName')]",
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2019-12-01",
            "location": "[parameters('ResourceGroup')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkInterfaces', variables('vmSRVNicName'))]",
                "[resourceId('Microsoft.Compute/availabilitySets', variables('netAvailabilitySetName'))]",
                "[resourceId('Microsoft.Network/loadBalancers', variables('lbName'))]"
            ],
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[parameters('adVMSize')]"
                },
                "availabilitySet": {
                    "id": "[resourceId('Microsoft.Compute/availabilitySets', variables('netAvailabilitySetName'))]"
                },
                "osProfile": {
                    "computerName": "[variables('vmSRVName')]",
                    "adminUsername": "[parameters('adminUsername')]",
                    "adminPassword": "[parameters('adminPassword')]"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "[variables('vmSRVImagePublisher')]",
                        "offer": "[variables('vmSRVImageOffer')]",
                        "sku": "[variables('vmSRVImageSKU')]",
                        "version": "latest"
                    },
                    "osDisk": {
                        "name": "[concat(variables('vmSRVName'),'_osdisk')]",
                        "caching": "ReadWrite",
                        "createOption": "FromImage",
                        "managedDisk": {
                            "storageAccountType": "[variables('saType')]"
                        }
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces',variables('vmSRVNicName'))]"
                        }
                    ]
                }
            }
        },
        //Microsoft.Compute/virtualMachines/extensions/vmSRVName/PrepareSRV
        {
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "name": "[concat(variables('vmSRVName'),'/PrepareSRV')]",
            "apiVersion": "2019-12-01",
            "location": "[parameters('ResourceGroup')]",
            "dependsOn": [
                "[resourceId('Microsoft.Compute/virtualMachines', variables('vmSRVName'))]"
            ],
            "properties": {
                "publisher": "Microsoft.Powershell",
                "type": "DSC",
                "typeHandlerVersion": "2.19",
                "autoUpgradeMinorVersion": true,
                "settings": {
                    "ModulesUrl": "[variables('vmSRVModulesURLPreparation')]",
                    "ConfigurationFunction": "[variables('vmSRVFunctionPreparation')]",
                    "Properties": {
                        "DNSServer": "[variables('vmDCNicIPAddress')]"
                    }
                }
            }
        },
        //Microsoft.Resources/deployments/ConfigSRV
        {
            "name": "ConfigSRV",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-09-01",
            "dependsOn": [
                "[resourceId('Microsoft.Compute/virtualMachines/extensions', variables('vmSRVName'),'PrepareSRV')]",
                "[resourceId('Microsoft.Resources/deployments', 'UpdateNICSRV')]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('vmSRVTemplateUriConfigure')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "Name": {
                        "value": "[variables('vmSRVName')]"
                    },
                    "location": {
                        "value": "[parameters('ResourceGroup')]"
                    },
                    "adminUsername": {
                        "value": "[parameters('adminUsername')]"
                    },
                    "adminPassword": {
                        "value": "[parameters('adminPassword')]"
                    },
                    "domainName": {
                        "value": "[parameters('domainName')]"
                    },
                    "ConfigFunction": {
                        "value": "[variables('vmSRVFunctionConfiguration')]"
                    },
                    "ConfigModulesURL": {
                        "value": "[variables('vmSRVModulesURLConfiguration')]"
                    }
                }
            }
        },

        //CLIENT

        //Microsoft.Compute/virtualMachines/vmCLIENTName
        {
            "name": "[variables('vmCLIENTName')]",
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2019-12-01",
            "location": "[parameters('ResourceGroup')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkInterfaces', variables('vmCLIENTNicName'))]",
                "[resourceId('Microsoft.Compute/availabilitySets', variables('netAvailabilitySetName'))]",
                "[resourceId('Microsoft.Network/loadBalancers', variables('lbName'))]"
            ],
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[parameters('adVMSize')]"
                },
                "availabilitySet": {
                    "id": "[resourceId('Microsoft.Compute/availabilitySets', variables('netAvailabilitySetName'))]"
                },
                "osProfile": {
                    "computerName": "[variables('vmCLIENTName')]",
                    "adminUsername": "[parameters('adminUsername')]",
                    "adminPassword": "[parameters('adminPassword')]"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "[variables('vmCLIENTImagePublisher')]",
                        "offer": "[variables('vmCLIENTImageOffer')]",
                        "sku": "[variables('vmCLIENTImageSKU')]",
                        "version": "latest"
                    },
                    "osDisk": {
                        "name": "[concat(variables('vmCLIENTName'),'_osdisk')]",
                        "caching": "ReadWrite",
                        "createOption": "FromImage",
                        "managedDisk": {
                            "storageAccountType": "[variables('saType')]"
                        }
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces',variables('vmCLIENTNicName'))]"
                        }
                    ]
                }
            }
        },
        //Microsoft.Compute/virtualMachines/extensions/vmCLIENTName/PrepareClient
        {
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "name": "[concat(variables('vmCLIENTName'),'/PrepareClient')]",
            "apiVersion": "2019-12-01",
            "location": "[parameters('ResourceGroup')]",
            "dependsOn": [
                "[resourceId('Microsoft.Compute/virtualMachines', variables('vmCLIENTName'))]"
            ],
            "properties": {
                "publisher": "Microsoft.Powershell",
                "type": "DSC",
                "typeHandlerVersion": "2.19",
                "autoUpgradeMinorVersion": true,
                "settings": {
                    "ModulesUrl": "[variables('vmCLIENTModulesURLPreparation')]",
                    "ConfigurationFunction": "[variables('vmCLIENTFunctionPreparation')]",
                    "Properties": {
                        "DNSServer": "[variables('vmDCNicIPAddress')]"
                    }
                }
            }
        },
        //Microsoft.Resources/deployments/ConfigClient
        {
            "name": "ConfigClient",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-09-01",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/deployments', 'UpdateNICCLIENT')]",
                "[resourceId('Microsoft.Compute/virtualMachines/extensions', variables('vmCLIENTName'), 'PrepareCLIENT')]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('vmCLIENTTemplateUriConfigure')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "Name": {
                        "value": "[variables('vmCLIENTName')]"
                    },
                    "location": {
                        "value": "[parameters('ResourceGroup')]"
                    },
                    "adminUsername": {
                        "value": "[parameters('adminUsername')]"
                    },
                    "adminPassword": {
                        "value": "[parameters('adminPassword')]"
                    },
                    "domainName": {
                        "value": "[parameters('domainName')]"
                    },
                    "ConfigFunction": {
                        "value": "[variables('vmCLIENTFunctionConfiguration')]"
                    },
                    "ConfigModulesURL": {
                        "value": "[variables('vmCLIENTModulesURLConfiguration')]"
                    }
                }
            }
        }
    ]
}
